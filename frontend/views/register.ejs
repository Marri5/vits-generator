<section class="auth-container">
    <div class="auth-card">
        <h1>Registrer deg</h1>
        <p class="auth-subtitle">Opprett en konto for å bruke Vits Generator</p>
        
        <form id="registerForm" class="auth-form">
            <div class="form-group">
                <label for="username">Brukernavn</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    required 
                    placeholder="Velg et brukernavn"
                    autocomplete="username"
                    minlength="3"
                    maxlength="20"
                    pattern="[a-zA-Z0-9_\-]+"
                    title="Brukernavn kan kun inneholde bokstaver, tall, bindestrek og understrek"
                >
                <small class="form-help">3-20 tegn, kun bokstaver, tall, - og _</small>
            </div>
            
            <div class="form-group">
                <label for="password">Passord</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    placeholder="Velg et sikkert passord"
                    autocomplete="new-password"
                    minlength="6"
                >
                <small class="form-help">Minimum 6 tegn</small>
            </div>
            
            <div class="form-group">
                <label for="confirmPassword">Bekreft passord</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    required 
                    placeholder="Skriv inn passordet på nytt"
                    autocomplete="new-password"
                >
            </div>
            
            <div class="form-error" id="registerError" style="display: none;"></div>
            <div class="form-success" id="registerSuccess" style="display: none;"></div>
            
            <button type="submit" class="btn btn-primary btn-block">
                <span id="registerText">Registrer meg</span>
                <span id="registerLoader" style="display: none;">
                    <i class="fas fa-spinner fa-spin"></i> Registrerer...
                </span>
            </button>
        </form>
        
        <div class="auth-footer">
            <p>Har du allerede en konto? <a href="/login">Logg inn her</a></p>
        </div>
    </div>
</section>

<style>
.auth-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.auth-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2.5rem;
    width: 100%;
    max-width: 400px;
}

.auth-card h1 {
    text-align: center;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
}

.auth-subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 2rem;
}

.auth-form {
    margin-bottom: 1.5rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
}

.form-group input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s;
}

.form-group input:focus {
    outline: none;
    border-color: var(--primary-color);
}

.form-group input:invalid:not(:placeholder-shown) {
    border-color: #e74c3c;
}

.form-help {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
    color: #666;
}

.form-error {
    background: #fee;
    color: #c33;
    padding: 0.75rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.form-success {
    background: #efe;
    color: #393;
    padding: 0.75rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.btn-block {
    width: 100%;
    padding: 0.875rem;
    font-size: 1.1rem;
}

.auth-footer {
    text-align: center;
    color: #666;
}

.auth-footer a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
}

.auth-footer a:hover {
    text-decoration: underline;
}
</style>

<script>
document.getElementById('registerForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    const errorDiv = document.getElementById('registerError');
    const successDiv = document.getElementById('registerSuccess');
    const registerText = document.getElementById('registerText');
    const registerLoader = document.getElementById('registerLoader');
    const submitBtn = e.target.querySelector('button[type="submit"]');
    
    // Reset messages
    errorDiv.style.display = 'none';
    successDiv.style.display = 'none';
    
    // Valider passord
    if (password !== confirmPassword) {
        errorDiv.textContent = 'Passordene stemmer ikke overens';
        errorDiv.style.display = 'block';
        return;
    }
    
    // Vis loading state
    registerText.style.display = 'none';
    registerLoader.style.display = 'inline-block';
    submitBtn.disabled = true;
    
    try {
        const response = await fetch('http://10.12.91.44:3001/api/user/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ username, password })
        });
        
        const data = await response.json();
        
        if (response.ok) {
            // Lagre token og brukernavn for automatisk innlogging
            localStorage.setItem('authToken', data.token);
            localStorage.setItem('username', data.username);
            
            successDiv.textContent = 'Kontoen ble opprettet! Logger deg inn...';
            successDiv.style.display = 'block';
            
            // Send token som cookie til frontend
            document.cookie = `authToken=${data.token}; path=/; max-age=${7 * 24 * 60 * 60}`;
            
            // Redirect til forsiden etter kort pause
            setTimeout(() => {
                window.location.href = '/';
            }, 1500);
        } else {
            errorDiv.textContent = data.message || 'Kunne ikke opprette konto';
            errorDiv.style.display = 'block';
        }
    } catch (error) {
        console.error('Registration error:', error);
        errorDiv.textContent = 'Kunne ikke koble til serveren. Prøv igjen senere.';
        errorDiv.style.display = 'block';
    } finally {
        // Skjul loading state
        registerText.style.display = 'inline';
        registerLoader.style.display = 'none';
        submitBtn.disabled = false;
    }
});

// Valider at passordene matcher mens brukeren skriver
document.getElementById('confirmPassword').addEventListener('input', function() {
    const password = document.getElementById('password').value;
    const confirmPassword = this.value;
    
    if (confirmPassword && password !== confirmPassword) {
        this.setCustomValidity('Passordene stemmer ikke overens');
    } else {
        this.setCustomValidity('');
    }
});
</script> 